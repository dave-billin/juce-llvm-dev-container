{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
   "tasks": [
      {
         "type": "cmake",
         "label": "Configure CMake",
         "command": "configure",
         "targets": [],
         "group": "build",
         "problemMatcher": [],
         "detail": "Configure the project build using CMake"
      },
      {
         "type": "cmake",
         "label": "Build examples",
         "command": "build",
         "targets": [
            "audio-plugin-example",
            "gui-example"
         ],
         "group": "build",
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build the example audio plugin and GUI applications"
      },
      {
         "type": "cmake",
         "label": "Build audio plugin example",
         "command": "build",
         "targets": [
            "audio-plugin-example_All"
         ],
         "group": "build",
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build the example audio plugin application under audio-plugin-example/"
      },
      {
         "type": "cmake",
         "label": "Build GUI example",
         "command": "build",
         "targets": [
            "gui-example"
         ],
         "group": "build",
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build the example GUI application under GUI-example/"
      },
      {
         "type": "cmake",
         "label": "Build the JUCE BinaryBuilder",
         "command": "build",
         "targets": [
            "BinaryBuilder"
         ],
         "group": "build",
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build the JUCE BinaryBuilder utility"
      },
      {
         "type": "cmake",
         "label": "Build the JUCE Audio Plugin Host",
         "command": "build",
         "targets": [
            "AudioPluginHost"
         ],
         "group": "build",
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build the JUCE Audio Plugin Host utility"
      },
      {
         "type": "cmake",
         "label": "Build the Projucer",
         "command": "build",
         "targets": [
            "Projucer"
         ],
         "group": "build",
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build the Projucer utility"
      },
      {
         "type": "cmake",
         "label": "Build JUCE utilities",
         "command": "build",
         "targets": [
            "BinaryBuilder",
            "Projucer",
            "AudioPluginHost"
         ],
         "group": "build",
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build JUCE utilities (Projucer, AudioPluginHost, BinaryBuilder, etc."
      },
      {
         "type": "cmake",
         "label": "Build all JUCE demos",
         "command": "build",
         // Demo targets can be listed by running the following command under the build/ directory
         // after configuring CMake:
         //   ninja -t targets all | sed -nr 's/^([[:alnum:]]+Demo):.*/\1/p'
         "targets": [
            "AccessibilityDemo",
            "AnalyticsCollectionDemo",
            "AnimationAppDemo",
            "AnimationDemo",
            "AudioAppDemo",
            "AudioLatencyDemo",
            "AudioPlaybackDemo",
            "AudioPluginDemo",
            "AudioRecordingDemo",
            "AudioSettingsDemo",
            "AudioSynthesiserDemo",
            "BouncingBallWavetableDemo",
            "Box2DDemo",
            "ChildProcessDemo",
            "CodeEditorDemo",
            "ComponentDemo",
            "ComponentTransformsDemo",
            "ConvolutionDemo",
            "CryptographyDemo",
            "DSPModulePluginDemo",
            "DialogsDemo",
            "FIRFilterDemo",
            "FlexBoxDemo",
            "FontsDemo",
            "GainDemo",
            "GraphicsDemo",
            "GridDemo",
            "HelloWorldDemo",
            "HostPluginDemo",
            "IIRFilterDemo",
            "ImagesDemo",
            "InAppPurchasesDemo",
            "JavaScriptDemo",
            "KeyMappingsDemo",
            "LiveConstantDemo",
            "LookAndFeelDemo",
            "MDIDemo",
            "MPEDemo",
            "MenusDemo",
            "MidiDemo",
            "MultiTouchDemo",
            "MultithreadingDemo",
            "NetworkGraphicsDemo",
            "NetworkingDemo",
            "OSCDemo",
            "OpenGLAppDemo",
            "OpenGLDemo",
            "OscillatorDemo",
            "OverdriveDemo",
            "PluckedStringsDemo",
            "PropertiesDemo",
            "SIMDRegisterDemo",
            "SimpleFFTDemo",
            "StateVariableFilterDemo",
            "SystemInfoDemo",
            "TimersAndEventsDemo",
            "UnitTestsDemo",
            "ValueTreesDemo",
            "WaveShaperTanhDemo",
            "WebBrowserDemo",
            "WidgetsDemo",
            "WindowsDemo",
            "XMLandJSONDemo"
         ],
         "group": "build",
         "problemMatcher": [
            "$gcc"
         ],
         "detail": "Build all demo applications supplied with the JUCE library"
      },
      {
         "type": "cmake",
         "label": "CMake: clean",
         "command": "clean",
         "group": "build",
         "problemMatcher": [],
         "detail": "Clean up compiled objects"
      },
      {
         "type": "shell",
         "label": "C/C++: clang++ build active file",
         "command": "/usr/bin/clang++",
         "args": [
            "-std=c++17",
            "-stdlib=libc++",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
         ],
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": false
         }
      },
      {
         "type": "process",
         "label": "Delete build directory",
         "command": "/bin/rm",
         "args": [
            "-rf",
            "${workspaceFolder}/build"
         ],
         "group": {
            "kind": "build",
            "isDefault": false
         }
      },
      {
         "type": "shell",
         "label": "Run the Projucer",
         "command": "$(find build/ -type f -name Projucer)",
         "options": {
            "cwd": "${workspaceFolder}"
         },
         "group": {
            "kind": "none",
            "isDefault": false
         },
         "problemMatcher": [],
         "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false,
            "close": true
         },
         "detail": "Runs the Projucer utility supplied with the JUCE library"
      },
      {
         "type": "process",
         "label": "Run the JUCE Audio Plugin Host",
         "command": "${workspaceFolder}/build/ThirdParty/JUCE/extras/AudioPluginHost/AudioPluginHost_artefacts/AudioPluginHost",
         "group": {
            "kind": "none",
            "isDefault": false
         },
         "problemMatcher": [],
         "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false,
            "close": true
         },
         "detail": "Run the audio plugin host supplied with the JUCE library"
      },
      {
         "type": "process",
         "label": "Run the audio-plugin-example application",
         "command": "${workspaceFolder}/build/audio-plugin-example/audio-plugin-example_artefacts/Debug/Standalone/audio-plugin-example",
         "group": {
            "kind": "none",
            "isDefault": false
         },
         "problemMatcher": [],
         "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false,
            "close": true
         }
      },
      {
         "type": "process",
         "label": "Run the gui-example application",
         "command": "${workspaceFolder}/build/GUI-example/gui-example_artefacts/Debug/gui-example",
         "group": {
            "kind": "none",
            "isDefault": false
         },
         "problemMatcher": [],
         "presentation": {
            "echo": false,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": false,
            "clear": false,
            "close": true
         }
      }
   ]
}